<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist, id: "song_artist_name" %>
  <br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <%# <%= f.label :song_notes_1 %>
  <%# <%= f.text_area :note_contents[] id=%> 
  <textarea name="song[note_contents][]" id="song_notes_1"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_2"></textarea>
  <%= f.submit %>
<% end %>


